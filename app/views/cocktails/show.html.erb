<% if @cocktail.photo.url %>
  <div class="banner banner-drink" style="background-image: linear-gradient(-225deg, rgba(200,101,80,0.6) 0%, rgba(50,36,61,0.6) 50%), url(<%= cl_image_path @cocktail.photo %>);">
  <% else %>
    <div class="banner banner-drink" style="background-image: linear-gradient(-225deg, rgba(200,101,80,0.6) 0%, rgba(50,36,61,0.6) 50%), url(<%= image_path 'cocktail_CampariOrange' %>);">
      <% end %>
    <div class="banner-content">
      <div class="goback-button">
        <%= link_to "Go Back", cocktails_path %>
      </div>
      <h1><%= @cocktail.name %></h1>
    </div>
</div>

<div class="container main-show">


  <div class="ingredients-body">
    <% if @cocktail.doses[0] %>
      <h3>This is what you need</h3>
    <% else  %>
      <h3>There are no ingredients for <b><%= @cocktail.name %></b> </h3>
    <% end %>

    <ul>
      <% @cocktail.doses.each do |dose| %>
      <li>
        <p>
          <%= dose.description %> of <%= dose.ingredient.name %>
          <%= link_to "ðŸ—‘", dose_path(dose), method: :delete, data: {:confirm =>"Are you sure?"}, class: "delete-ing" %>
          <% end %>
        </p>
      </li>
    </ul>
    <p>Add more ingredients <%= link_to "here", new_cocktail_dose_path(@cocktail) %></p>
  </div>



