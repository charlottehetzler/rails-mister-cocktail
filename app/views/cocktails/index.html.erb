<div class="banner" style="background-image: linear-gradient(-225deg, rgba(200,101,80,0.6) 0%, rgba(50,36,61,0.6) 50%), url(<%= image_path "bar" %>)">

  <div class="banner-content">
    <h1>Our Cocktails</h1>
    <p>Find and create delicious cocktails...</p>
  </div>
</div>


<div class="main-overview">
  <h3>Check out our cocktails</h3>
  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path "cocktail_"+cocktail.name+"" %>);">
          <div class="card-category">With Alcohol</div>
            <div class="card-description">
              <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
              <%= link_to "ðŸ—‘", cocktail_path(cocktail), method: :delete, data: {:confirm =>"Are you sure?"}  %>
            </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

